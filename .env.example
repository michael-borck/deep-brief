# DeepBrief Environment Variables
# Copy this file to .env and customize as needed

# Application settings
DEEP_BRIEF_APP_NAME=DeepBrief
DEEP_BRIEF_DEBUG=false

# Processing settings
DEEP_BRIEF_PROCESSING__MAX_VIDEO_SIZE_MB=500
DEEP_BRIEF_PROCESSING__TEMP_DIR=temp
DEEP_BRIEF_PROCESSING__CLEANUP_TEMP_FILES=true

# Scene detection
DEEP_BRIEF_SCENE_DETECTION__THRESHOLD=0.4
DEEP_BRIEF_SCENE_DETECTION__MIN_SCENE_DURATION=2.0

# Audio settings
DEEP_BRIEF_AUDIO__SAMPLE_RATE=16000
DEEP_BRIEF_AUDIO__CHANNELS=1

# Transcription settings
DEEP_BRIEF_TRANSCRIPTION__MODEL=whisper-base
DEEP_BRIEF_TRANSCRIPTION__LANGUAGE=auto
DEEP_BRIEF_TRANSCRIPTION__DEVICE=auto

# Analysis settings
DEEP_BRIEF_ANALYSIS__CONFIDENCE_THRESHOLD=0.7

# Logging settings
DEEP_BRIEF_LOGGING__LEVEL=INFO
DEEP_BRIEF_LOGGING__FILE_ENABLED=true
DEEP_BRIEF_LOGGING__CONSOLE_ENABLED=true